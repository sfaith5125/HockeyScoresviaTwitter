<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Configuration">

    <EditText
        android:id="@+id/editCommentTxt"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:hint="Add Comment Here"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/commitCommentbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Commit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCommentTxt" />

    <EditText
        android:id="@+id/editCommentTxt2"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/commitCommentbtn"
        tools:layout_editor_absoluteX="44dp" />

</android.support.constraint.ConstraintLayout>